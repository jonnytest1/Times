<?xml version="1.0" encoding="UTF-8"?>
 <persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

  <persistence-unit name="mariaDatasource">
  	<jta-data-source>java:jboss/MariaDBDS</jta-data-source>
	<class>app.model.Time</class>
    <properties>
         <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
         <property name="javax.persistence.jdbc.url" value="jdbc:mysql://maria:3306/times"/>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
          <property name="hibernate.hbm2ddl.auto" value="none"/>
      </properties>
   </persistence-unit>
   <persistence-unit name="mariaCDB">
  	<jta-data-source>java:jboss/MariaDBDS</jta-data-source>
	<class>app.model.Time</class>
    <properties>
         <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
         <property name="javax.persistence.jdbc.url" value="jdbc:mysql://maria:3306/times"/>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
          <property name="hibernate.hbm2ddl.auto" value="create"/>
      </properties>
   </persistence-unit>
</persistence>